.container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2.form-signin-heading Please sign in
    %label.sr-only{text: "inputEmail"} Email address
     =f.text_field: email, placeholder: "input Email" required: true ,autocomplete: "off"
    %label.sr-only{f.text_field: "inputPassword"} Password
    = f.password_field: password, placeholder: "input password" required: true ,autocomplete: "off"
    .checkbox
      %label
        %input{type: "checkbox", value: "remember-me"}/
        Remember me
    %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Sign in
  .text-center
    %p
      Not a member?
      =link_to "Sign up now", new_user_session_path
