.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{href: "#"}
          .media-object
            = image_tag @user.avatar, style: "width: 64px; height: 64px;", "data-holder-rendered": "true", "data-src": "holder.js/64x64"
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            29
            %i Projects
        .proto-user
          %span.degree
            = @user.name
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works
.container.proto-list
  .row
    - @prototypes.each do |p|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = image_tag p.main_image.image
          %p= link_to '削除', prototype_path(p) , method: :delete
          %p= link_to '編集', edit_prototype_path(p)
          %caption
            %h3
              = p.title
            .proto-meta
              .proto-date
                = p.created_at.strftime('%Y年%m月%d日')
            %ul.proto-tag-list.list-inline
              %li
                %a{href: "#", class: "btn btn-default"} iPad
              %li
                %a{href: "#", class: "btn btn-default"} wireframe
.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label": "Previous", href: "#"}
        %span{"aria-hidden": "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      %a{href: "#"} 2
    %li
      %a{href: "#"} 3
    %li
      %a{href: "#"} 4
    %li
      %a{href: "#"} 5
    %li
      %a{"aria-label": "Next", href: "#"}
        %span{"aria-hidden": "true"} »
