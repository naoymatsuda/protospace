.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = image_tag @prototype.user.avatar, class: 'media-object' , alt: "64x64", data:{ src: "holder.js/64x64", holder:{rendered: true}}, size: "64x64"
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
        .proto-user
          by
          %p= link_to @prototype.user.name, user_path(@prototype.user)
          %span.degree
            = @prototype.user.profile

    .col-md-6.text-right{ id: "like-link" }
      = render partial: "likes/like", locals: { prototype: @prototype, like: @like , likes: @likes}
  .row
    .col-md-9
      = image_tag @prototype.main_image.image, class: 'img-responsive'
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.images.published.each do |p|
          %li.list-group-item
            = image_tag p.image , class: 'img-responsive'
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      = @prototype.catch_copy
    .col-md-6
      %h4 Concept
      = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (#{@comments.count})
    .col-md-8
      .col-md-6.text-right{ id: "comment-link" }
        %ul#comment_list
          = render partial: "comments/comment", locals: { prototype: @prototype ,comment: @comment,comments: @comments }