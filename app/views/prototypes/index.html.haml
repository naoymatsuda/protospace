.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          = link_to "Popular PROTO", '#'
        %li{role: "presentation"}
          %a{href: "#"} Newest PROTO
      %button{type: "button", class: "btn btn-default col-lg-1"} View Tags

.container.proto-list
  .row
    - @prototypes.each do |p|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          %a{href: "/prototypes/show"}
            = image_tag p.main_image.image
            - if current_user.id == p.user.id
              / - else
              /   - return true
          .caption
            %h3
              = p.title
            .proto-meta
              .proto-user
                %p= link_to p.user.name, user_path(p.user)
              .proto-posted
                = p.created_at.strftime('%Y年%m月%d日')
            %ul.proto-tag-list.list-inline
              %li
                %a{href: "#", class: "btn btn-default"}
                  iPad
              %li
                %a{href: "#", class: "btn btn-default"}
                  wireframe
.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label" => "Previous", href: "#"}
        %span{"aria-hidden" => "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      %a{href: "#"} 2
    %li
      %a{href: "#"} 3
    %li
      %a{href: "#"} 4
    %li
      %a{href: "#"} 5
    %li
      %a{"aria-label" => "Next", href: "#"}
        %span{"aria-hidden" => "true"}
